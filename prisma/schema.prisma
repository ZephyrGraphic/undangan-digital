generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  id        String   @id @default(uuid())
  name      String
  status    String
  pax       Int
  createdAt DateTime @default(now())
}

model Wish {
  id        String   @id @default(uuid())
  name      String
  message   String
  createdAt DateTime @default(now())
}
